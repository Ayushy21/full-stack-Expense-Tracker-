{
  "name": "expense-tracker",
  "private": true,
  "description": "Full-stack Expense Tracker",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "cd backend && npm run dev",
    "dev:ui": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "mongodb": "^6.12.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
